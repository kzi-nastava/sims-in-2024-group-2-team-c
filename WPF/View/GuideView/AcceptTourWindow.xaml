<Window x:Class="BookingApp.WPF.View.GuideView.AcceptTourWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookingApp.WPF.View.GuideView"
        mc:Ignorable="d"
        Title="AcceptTourWindow" Height="450" Width="800">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Select an available time slot:" FontWeight="Bold" FontSize="14" Margin="10" Grid.Row="0"/>

        <ListBox x:Name="AvailableSlotsListBox" 
                 ItemsSource="{Binding AvailableSlots}" 
                 SelectedItem="{Binding SelectedSlot}" 
                 Grid.Row="1" 
                 Margin="10">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding ., StringFormat={}{0:dd.MM.yyyy}}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Button Content="Accept" Command="{Binding AcceptCommand}" HorizontalAlignment="Right" Margin="10" Grid.Row="2" Width="100"/>
    </Grid>
</Window>
