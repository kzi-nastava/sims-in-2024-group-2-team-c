<Page x:Class="BookingApp.WPF.View.GuideView.Guide_TourStatisticDetails"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BookingApp.WPF.View.GuideView"
      mc:Ignorable="d" 
      d:DesignHeight="768" d:DesignWidth="1024"
      Title="Guide_TourStatisticDetails">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="Tour Statistics" FontSize="20" HorizontalAlignment="Center"/>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <Button Content="Back" Click="BackButton_Click"/>
            <Button Content="Home Page" Click="HomePageButton_Click"/>
        </StackPanel>

        <!-- Tour Details -->
        <StackPanel Grid.Row="1" Margin="10">
            <StackPanel Orientation="Vertical" >
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Name:    " FontSize="18"/>
                    <TextBlock Text="{Binding MostPopularTour.Name}" FontSize="18"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Location and City:    " FontSize="18"/>
                    <TextBlock Text="{Binding MostPopularTour.Location}" FontSize="18"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Description:     " FontSize="18"/>
                    <TextBlock Text="{Binding MostPopularTour.Description}" FontSize="18"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Language:    " FontSize="18"/>
                    <TextBlock Text="{Binding MostPopularTour.Language}" FontSize="18"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="MaxNumberOfTourists:     " FontSize="18"/>
                    <TextBlock Text="{Binding MostPopularTour.MaxTourists}" FontSize="18"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Duration:     " FontSize="18"/>
                    <TextBlock Text="{Binding MostPopularTour.Duration}" FontSize="18"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>

        <!-- Year ComboBox -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Label Content="Select Year:" Margin="0 0 5 0"/>
            <ComboBox ItemsSource="{Binding Years}" SelectedItem="{Binding SelectedYear}" Width="100"/>
            <Button Content="SHOW TOUR" Command="{Binding ShowTourCommand}" Margin="10 0"/>
        </StackPanel>
        
        
    

    </Grid>
</Page>
