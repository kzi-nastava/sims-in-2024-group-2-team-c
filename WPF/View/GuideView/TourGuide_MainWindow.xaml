<Window x:Class="BookingApp.WPF.View.GuideView.TourGuide_MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:BookingApp.WPF.ViewModel.GuideViewModel"
        xmlns:local="clr-namespace:BookingApp.WPF.View.GuideView"
        mc:Ignorable="d"
        Title="TourGuide_MainWindow" 
        Height="768" 
        Width="1024" 
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
<!--SizeToContent="Width"-->
    <Window.Resources>
        <DataTemplate DataType="{x:Type viewModel:MainWindow_ViewModel}">
            <local:Guide_HomePage/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:CancelTour_ViewModel}">
            <local:Guide_CancelTour/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:TourStatistic_ViewModel}">
            <local:Guide_TourStatistic/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:GuideTourStatisticDetails_ViewModel}">
            <local:Guide_TourStatisticDetails/>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Source="{Binding CurrentPage}"/>
    </Grid>
</Window>
