<Page x:Class="BookingApp.WPF.View.OwnerView.AllAccommodationsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BookingApp.WPF.View.OwnerView"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AllAccommodationsPage">

    <Grid Background="Transparent">
        <TextBlock Text="{DynamicResource Accommodations}" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center" Margin="0,10,0,0"/>

        <ScrollViewer Margin="10,50,10,10">
            <StackPanel>
                <ItemsControl ItemsSource="{Binding Accommodations}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="Gray" BorderThickness="1" Margin="5" Padding="10" Background="White" Width="400">
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="16"/>
                                    <TextBlock Text="Novi Sad" />
                                    <TextBlock Text="{DynamicResource Serbia}" />
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{DynamicResource MaxGuestsLabel}" />
                                        <TextBlock Text="{Binding MaxGuests}" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{DynamicResource MinBookingDaysLabel}" />
                                        <TextBlock Text="{Binding MinBookingDays }" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{DynamicResource CancellationDaysLabel}" />
                                        <TextBlock Text="{Binding CancellationDays}" />
                                    </StackPanel>

                                 
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
