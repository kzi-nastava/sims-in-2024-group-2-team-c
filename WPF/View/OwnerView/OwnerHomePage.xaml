<Page x:Class="BookingApp.WPF.View.OwnerView.OwnerHomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:BookingApp.WPF.View.OwnerView"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OwnerHomePage">

    <Grid Background="LightBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="20">
            <Button Content="ADD NEW ACCOMMODATION" Margin="5" Grid.ColumnSpan="2"/>
            <Button Content="STATISTICS" Margin="5" Grid.ColumnSpan="2"/>
            <Button Content="SCHEDULE A RENOVATION" Margin="5" Grid.ColumnSpan="2"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="20">
            <Button Content="VIEW YOUR ACCOMMODATIONS" Margin="5" Grid.ColumnSpan="2"/>
            <Button Content="RATE YOUR GUESTS" Margin="5" Grid.ColumnSpan="2" Command="{Binding NavigateToGuestRatingCommand}"/>
            <Button Content="FORUM" Margin="5" Grid.ColumnSpan="2"/>
        </StackPanel>
    </Grid>
</Page>
