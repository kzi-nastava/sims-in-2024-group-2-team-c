<Page x:Class="BookingApp.WPF.View.OwnerView.ScheduleRenovation"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BookingApp.WPF.View.OwnerView"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ScheduleRenovation">

    <Grid  Background="LightBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="Schedule a Renovation" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center" Margin="0,10,0,0" Grid.Row="0"/>

        <TextBlock Text="Choose an Accommodation" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,210,10" FontSize="20"/>
        <ComboBox x:Name="accommodationsComboBox" 
          SelectedItem="{Binding SelectedAccommodation}" 
          ItemsSource="{Binding Accommodations}" 
          DisplayMemberPath="Name" 
          Margin="400,60,300,10"  
          HorizontalAlignment="Center" 
          FontSize="15" />


        <Label Grid.Row="1" Grid.Column="0" Content="Choose Start Date" HorizontalAlignment="Center" Margin="0,0,150,0" FontSize="20"/>
        <DatePicker x:Name="startDatePicker" Grid.Row="1" Margin="420,10,300,10" VerticalAlignment="Top"  HorizontalAlignment="Center"/>

        <Label Grid.Row="2" Grid.Column="0" Content="Choose End Date" HorizontalAlignment="Center" Margin="0,0,150,0" FontSize="20"/>
        <DatePicker x:Name="endDatePicker" Grid.Row="2" Margin="420,10,300,10" VerticalAlignment="Top"  HorizontalAlignment="Center"/>

        <Label Grid.Row="3" Grid.Column="0" Content="Duration" HorizontalAlignment="Center" Margin="5,0,110,0" FontSize="20"></Label>
        <TextBox Grid.Row="3" Grid.Column="0" x:Name="Duration" Text="{Binding Duration}" Margin="420,10,300,10" VerticalAlignment="Top"  HorizontalAlignment="Center" Width="40"/>

        <Button Content="Submit" Background="Green" Grid.Row="4" Grid.Column="0"  Margin="100,10,225,10" Width="70" Height="30" Click="SaveRenovation" HorizontalAlignment="Right"></Button>
    </Grid>
</Page>
