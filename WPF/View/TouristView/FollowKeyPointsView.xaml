<Page x:Class="BookingApp.WPF.View.TouristView.FollowKeyPointsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BookingApp.WPF.View.TouristView"
      mc:Ignorable="d" 
      d:DesignHeight="750" d:DesignWidth="430"
      Title="FollowKeyPointsView"  Background="WhiteSmoke">
    <ScrollViewer HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height=" 20"></RowDefinition>
            <RowDefinition Height=" 100"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="30"></RowDefinition>
                <RowDefinition Height="60"></RowDefinition>
            </Grid.RowDefinitions>

            <Border Grid.Row="1" BorderBrush="#4e754a"  BorderThickness="3" Background="#b2edb4">

                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBox Grid.Row="0" 
                    Text="{Binding SelectedTour.Name}" 
                    HorizontalAlignment="Center" 
                    FontWeight="Bold"
                    FontSize="16" 
                    Background="Transparent" 
                    BorderThickness="0" 
                    IsReadOnly="True"/>

                    <TextBlock Grid.Row="1" 
                    Text="{Binding TourDescription}" 
                     HorizontalAlignment="Center" 
                     TextWrapping="Wrap" 
                     FontSize="15" 
                     Background="Transparent"
                     MaxWidth="300" Margin="5"/>
                   
                </Grid>


            </Border>

            <Button Grid.Row="1"  HorizontalAlignment="Left"  VerticalAlignment="Top" Margin="5"  Click="Return_Click"
                    Width="30" Height="30"  Background="Transparent" BorderThickness="0">
                <Image  Source="/Resources/Images/tour exit.png"/>
            </Button>
            
                <Grid  Margin="30"  Background="#b2edb4" Grid.Row="2"  >
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"></RowDefinition>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="KEY POINTS" Margin="10" FontWeight="SemiBold" Grid.Row="0" HorizontalAlignment="Center" ></TextBlock>
                    <!-- Create a nested Grid with ColumnDefinitions -->
                    <Grid Grid.Row="1" >
                        <Grid.ColumnDefinitions>
                            <!-- Columns for padding on left and right, central column for content -->
                            <ColumnDefinition Width="20" />
                            <!-- Left padding -->
                            <ColumnDefinition Width="*" />
                            <!-- Central column for main content -->
                            <ColumnDefinition Width="20" />
                            <!-- Right padding -->
                        </Grid.ColumnDefinitions>

                        <!-- Place your content in the central column -->
                        <ItemsControl  ItemsSource="{Binding ActiveTourKeyPoints}" Grid.Column="1" >
                            <!-- Define the ItemTemplate for each key point -->
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>


                                <Border BorderBrush="#294724" BorderThickness="2" Margin="0,0,0,10" Background="AliceBlue">
                                    <Grid Margin="5" >
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="2*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <!-- Display name, description, and active status -->
                                        <TextBlock Text="{Binding Name}" Grid.Column="0" Margin="5" TextWrapping="NoWrap" />
                                       <!-- <TextBlock Text="{Binding Description}" Grid.Column="1" Margin="5" TextWrapping="Wrap" /> -->
                                        <TextBlock Text="{Binding Active}" Grid.Column="2" Margin="5" TextWrapping="NoWrap">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="Red" />
                                                    <!-- Default color for "NOT ACTIVE" -->
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Active}" Value="ACTIVE">
                                                            <Setter Property="Foreground" Value="Green" />
                                                            <!-- Change color to green for "ACTIVE" -->
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>
                                </Border>

                            </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                    </Grid>
                </Grid>
           

            <Button Content="Rate the Tour" Grid.Row="4"
        Command="{Binding RateCommand}"   IsEnabled="{Binding IsTourInstanceEnded}"  Click="Rate_Click"
            VerticalAlignment="Center" 
            Padding="5" Width="100"/>


        </Grid>
    </ScrollViewer>
</Page>
