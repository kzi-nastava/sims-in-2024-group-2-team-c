<Page x:Class="BookingApp.WPF.View.TouristView.FollowKeyPointsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BookingApp.WPF.View.TouristView"
      mc:Ignorable="d" 
      d:DesignHeight="750" d:DesignWidth="430"
      Title="FollowKeyPointsView"  Background="WhiteSmoke">
    <ScrollViewer HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden">
    <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height=" 150"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="60"></RowDefinition>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" BorderBrush="#4e754a" Margin="0,20,0,0" BorderThickness="3" Background="#b2edb4">

                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBox Grid.Row="0" 
                    Text="{Binding SelectedTour.Name}" 
                    HorizontalAlignment="Center" 
                    FontWeight="Bold"
                    FontSize="16" 
                    Background="Transparent" 
                    BorderThickness="0" 
                    IsReadOnly="True"/>

                    <TextBlock Grid.Row="1" 
                    Text="{Binding TourDescription}" 
                     HorizontalAlignment="Center" 
                     TextWrapping="Wrap" 
                     FontSize="15" 
                     Background="Transparent"
                     MaxWidth="300" Margin="5"/>

                    <TextBlock Grid.Row="2" 
                        Text="{Binding Date, StringFormat={}{0:MM/dd/yyyy}}" 
                         HorizontalAlignment="Center" FontWeight="SemiBold"
                         TextWrapping="Wrap" 
                         FontSize="15" 
                         Background="Transparent"
                         MaxWidth="300" Margin="5"/>    

                </Grid>


            </Border>

            <Button Grid.Row="0"  HorizontalAlignment="Left"  VerticalAlignment="Top" Margin="5,25,0,0"  Command="{Binding GoBackCommand}"
                    Width="30" Height="30"  Background="Transparent" BorderThickness="0">
                <Image  Source="/Resources/Images/tour exit.png"/> 
            </Button>
            <!-- Click="Return_Click"-->
        

            <Border BorderBrush="Black" BorderThickness="1" Margin="30,30,30,10" Grid.Row="1">
                <Grid    Background="#b2edb4"   >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"></RowDefinition>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="KEY POINTS" Margin="10" FontWeight="SemiBold" Grid.Row="0" HorizontalAlignment="Center" ></TextBlock>



                        <Grid  Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="20" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="20" />
                            </Grid.ColumnDefinitions>


                            <ItemsControl  ItemsSource="{Binding ActiveTourKeyPoints}" Grid.Column="1" >
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="#294724" BorderThickness="2" Margin="0,0,0,10" Background="AliceBlue">

                                            <Grid>

                                                <Grid.RowDefinitions>
                                                    <RowDefinition></RowDefinition>
                                                    <RowDefinition></RowDefinition>
                                                </Grid.RowDefinitions>

                                                <Grid Margin="5" Grid.Row="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="2*" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>

                                                    <!-- Display name, description, and active status -->

                                                <TextBlock Text="{Binding Name}" Grid.Column="0" Margin="5" TextWrapping="NoWrap" />
                                                   
                                                    <TextBlock Text="{Binding Active}" Grid.Column="2" Margin="5" TextWrapping="NoWrap">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Foreground" Value="Red" />
                                                                <!-- Default color for "NOT ACTIVE" -->
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Active}" Value="ACTIVE">
                                                                        <Setter Property="Foreground" Value="Green" />
                                                                        <!-- Change color to green for "ACTIVE" -->
                                                                    </DataTrigger>
                                                                <DataTrigger Binding="{Binding Active}" Value="PASSED">
                                                                    <Setter Property="Foreground" Value="Orange" />
                                                                    <!-- Change color to green for "ACTIVE" -->
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </Grid>
                                            <Border Grid.Row="1" BorderBrush="Black" BorderThickness="1" Background="AliceBlue">
                                                    <TextBlock  Text="{Binding Description}"  Margin="5" TextWrapping="Wrap" MaxWidth="250" />
                                                 </Border>
                                            </Grid>
                                            
                                            
                                            
                                            
                                        </Border>

                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                        </Grid>
                        
                        
                        

                   
                    
                    
                    
                    
                    
                    
                    
                </Grid>

            </Border>


            <Button Content="RATE THE TOUR" Grid.Row="2" IsEnabled="{Binding IsTourInstanceEnded}"    Click="Rate_Click"
            VerticalAlignment="Center" 
            Padding="5"  Width="100"/>

            <!-- Command="{Binding RateCommand}" Command="{Binding DataContext.RateCommand, RelativeSource={RelativeSource AncestorType={x:Type local:FollowKeyPointsView}}}"Click="Rate_Click"to je za ovo gore u dugmetu  --> 

        </Grid>
    </ScrollViewer>
</Page>
